 <!--Form-->
 <form action = "/api/users" method="POST" id ="add_user" class="form">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" id="" value="" placeholder = "John Doe">
        </div>
        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="email" name="email" id="" value="" placeholder = "example@me.com">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="inline">
                <input type="radio" name="gender" value="Male">
                <label for="Male" class="text-light">Male</label>
            </div>
            <div class="inline">
                <input type="radio" name="gender" value="Female">
                <label for="Male" class="text-light">Female</label>
            </div>
        </div>

        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="inline">
                <input type="radio" name="status" value="Active">
                <label for="Active" class="text-light">Active</label>
            </div>
            <div class="inline">
                <input type="radio" name="status" value="Inactive">
                <label for="Inactive" class="text-light">Inactive</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class = "btn text-dark update">Save</button>
        </div>

    </div>
</form>